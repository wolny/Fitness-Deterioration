<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean id="algorithm" class="ki.edu.agh.algorithm.SequentialDeteriorationEA">
		<property name="iterationCount" value="20" />
		<!-- clustering algorithm -->
		<property name="clusteringAlgorithm">
			<bean class="ki.edu.agh.clustering.optics.OpticsClustering">
				<constructor-arg>
					<bean class="ki.edu.agh.clustering.optics.OpticsParamteres">
						<property name="minPoints" value="10" />
						<!-- problem's domain dependent -->
						<property name="epsilon" value="1.0" />
					</bean>
				</constructor-arg>
			</bean>
		</property>

		<!-- evolutionary algorithm -->
		<property name="evolutionaryAlgorithm">
			<bean class="ki.edu.agh.evolutionary.algorithm.RealValueGeneticAlgorithm">
				<property name="fitnessFunction">
					<bean class="ki.edu.agh.fintess.RobustFitnessFunction">
						<constructor-arg>
							<bean class="ki.edu.agh.fintess.StandardFitnessFunction">
								<constructor-arg>
									<bean class="ki.edu.agh.functors.UniModalFunction" />
								</constructor-arg>
							</bean>
						</constructor-arg>
					</bean>
				</property>

				<!-- TODO: set remainig properties -->
			</bean>
		</property>

		<!-- fitness deterioration algorithm -->
		<property name="fitnessDeterioration">
			<bean class="ki.edu.agh.deterioration.SimpleGaussianFitnessDeterioration" />
		</property>
	</bean>
</beans>
